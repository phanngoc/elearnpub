<script type="text/javascript">
  $(document).ready(function(){
    $('.remove').click(function(event){
      event.preventDefault();
      if(confirm("Are you sure remove co-author ?"))
      {
        window.location = $(this).attr('href');
      }
    });
  });
</script>
