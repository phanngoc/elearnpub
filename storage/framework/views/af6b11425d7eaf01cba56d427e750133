<script type="text/javascript">
  $(document).ready(function(){
    $('.parent').next('ul').hide();
    $('.parent').click(function(ev){
      ev.preventDefault();
      ev.stopPropagation();
      $('.parent').next('ul').slideUp();
      $(this).next('ul').slideDown();
    }); 
  }); 
</script>
